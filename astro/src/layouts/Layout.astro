---
import Footer from '@components/layout/Footer.astro';
import Head from '@components/layout/Head.astro';
import Header from '@components/layout/Header.astro';
import LoadingScreen from '@components/layout/LoadingScreen.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<!-- This site was developed by LOKKEE STUDIOS (https://lokkeestudios.com) -->
<html
  lang="en"
  class="scroll-smooth"
>
  <Head title={title} />
  <body
    class="bg-neutrals-900 text-neutrals-50 antialiased selection:bg-primary/90 selection:text-neutrals-50"
  >
    <LoadingScreen />
    <Header />

    <slot />

    <Footer />

    <script>
      import '../ts/base.ts';
    </script>
  </body>
</html>
